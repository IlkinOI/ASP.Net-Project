@model EduHomeAspProject.Models.About
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Model.Title1 <span>@Model.Title2</span></h2>
                    <p>@Model.WelcomeMessage1</p>
                    <p class="hidden-sm">@Model.WelcomeMessage2</p>
                    <a class="default-btn" href="@Url.Action("Index","Course")">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/Uploads/@Model.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>


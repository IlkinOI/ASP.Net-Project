@model EduHomeAspProject.ViewModels.VMMessage



<div class="reply-area">
    <h3>LEAVE A message</h3>
    <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
    <form id="contact-form" action="@Url.Action("Reply","Message")" method="post">
        <div class="row">
            <div class="col-md-12">
                <p>Name</p>
                <input type="text" name="Name" id="Name" required>
            </div>
            <div class="col-md-12">
                <p>Email</p>
                <input type="email" name="Email" id="Email" required>
            </div>
            <div class="col-md-12">
                <p>Subject</p>
                <input type="text" name="Subject" id="Subject" required>
                <p>Message</p>
                <textarea name="Text" id="Text" cols="15" rows="10" required></textarea>
            </div>
        </div>
        <button class="default-btn" type="submit" data-text="send"><span>send message</span></button>
        <input type="hidden" name="Page" value="@Model.Page" />
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <input type="hidden" name="BlogId" value="@Model.BlogId" />
        <input type="hidden" name="EventId" value="@Model.EventId" />
        <input type="hidden" name="CourseId" value="@Model.CourseId" />
        <input type="hidden" name="ContactId" value="@Model.ContactId" />
        @if (Session["Sent"] != null)
        {
             <div class="alert alert-success">Your Message Sent!</div>
                Session["Sent"] = null;
        }
    </form>
</div>


@model EduHomeAspProject.ViewModels.VMContact
@{
    ViewBag.Title = "Index";
}


<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image:url(/Uploads/@Model.BGImage.Image)">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>@Model.BGImage.TItle</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Contact Start -->
<div class="map-area mt-50">
    <!-- google-map-area start -->
    <div class="google-map-area">
        <!--  Map Section -->
        <div id="contacts" class="map-area">
            <div id="googleMap" style="width:100%;height:440px;">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387193.3061012122!2d-74.25987728992853!3d40.69714939078029!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2s!4v1594021240098!5m2!1sen!2s" style="width:100%;height:100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
    </div>
</div>
<div class="contact-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="contact-contents text-center">
                    <div class="single-contact mb-65">
                        <div class="contact-icon">
                            <img src="/Uploads/@Model.Contact.AddressLogo1" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>address</h3>
                            <p>@Model.Contact.Address1</p>
                        </div>
                    </div>
                    <div class="single-contact mb-65">
                        <div class="contact-icon">
                            <img src="/Uploads/@Model.Contact.AddressLogo2" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>address</h3>
                            <p>@Model.Contact.Address2</p>
                        </div>
                    </div>
                    <div class="single-contact">
                        <div class="contact-icon">
                            <img src="/Uploads/@Model.Contact.PhoneLogo" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>Phone</h3>
                            <p>@Model.Contact.Phone</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                @if (Session["User"]!=null)
                {
                    Html.RenderPartial("~/Views/Shared/_messagePartial.cshtml", new EduHomeAspProject.ViewModels.VMMessage { Page = "Contact", ContactId = Model.Contact.Id, UserId = (int)Session["UserId"] });

                }
                @{
                    Html.RenderPartial("~/Views/Shared/_messagePartial.cshtml", new EduHomeAspProject.ViewModels.VMMessage { Page = "Contact", ContactId = Model.Contact.Id });
                }
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
<!-- Subscribe Start -->
@{
    Html.RenderPartial("~/Views/Shared/_subscribePartial.cshtml", new EduHomeAspProject.ViewModels.VMSubscribe { Page = "Contact" });
}
<!-- Subscribe End -->

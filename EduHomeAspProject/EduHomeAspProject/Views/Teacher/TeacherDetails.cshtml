@model EduHomeAspProject.ViewModels.VMTeacherDetail
@{
    ViewBag.Title = "TeacherDetails";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image:url(/Uploads/@Model.BGImage.Image)">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>@Model.BGImage.TItle</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img style="width:767px" src="~/Uploads/@Model.Teacher.Image" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Teacher.Fullname</h2>
                    <h5>@Model.Teacher.Position</h5>
                    <h4>about me</h4>
                    <p>@Model.Teacher.About</p>
                    <ul>
                        <li><span>degree: </span>@Model.Teacher.Degree</li>
                        <li><span>experience: </span>@Model.Teacher.Experience</li>
                        <li><span>hobbies: </span>@Model.Teacher.Hobbies</li>
                        <li><span>faculty: </span>@Model.Teacher.Faculty</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span>@Model.Teacher.Email</p>
                    <p><span>make a call : </span>@Model.Teacher.Phone</p>
                    <p><span>skype : </span> @Model.Teacher.Skype</p>
                    <ul>
                        @foreach (var item in Model.SocialTeachers)
                        {
                            <li><a href="@item.Link"><i class="@item.Icon"></i></a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        @foreach (var item in Model.TeacherSkills)
                        {
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>@item.Skill.Name</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: 85%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@item.Skill.Progress</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Subscribe Start -->
@{
    Html.RenderPartial("~/Views/Shared/_subscribePartial.cshtml", new EduHomeAspProject.ViewModels.VMSubscribe { Page = "TeacherDetails", pagedetailId = Model.Teacher.Id });
}
<!-- Subscribe End -->

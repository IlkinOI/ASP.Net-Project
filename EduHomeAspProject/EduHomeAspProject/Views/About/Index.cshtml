@model EduHomeAspProject.ViewModels.VMAbout
@{
    ViewBag.Title = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image:url(/Uploads/@Model.BgImage.Image)">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>@Model.BgImage.TItle</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
@{
    Html.RenderPartial("~/Views/Shared/_aboutPartial.cshtml", Model.About);
}
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="/Public/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Teachers)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher">
                        <div class="single-teacher-img">
                            <a href="@Url.Action("TeacherDetails","Teacher", new { id=item.Id})"><img src="/Uploads/@item.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="@Url.Action("TeacherDetails","Teacher", new { id=item.Id})">@item.Fullname</a></h2>
                            <h4>@item.Position.Name</h4>
                            <ul>
                                @foreach (var itm in item.SocialTeachers)
                                {
                                    <li><a href="@itm.Link"><i class="@itm.Icon"></i></a></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center" style="background-image:url(/Uploads/@Model.TestMorial.ImageBG">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                @{
                    Html.RenderPartial("~/Views/Shared/_testmonialPartial.cshtml", Model.TestMorials);
                }
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            @{
                Html.RenderPartial("~/Views/Shared/_videoPartial.cshtml", Model.Common);
            }
            @{
                Html.RenderPartial("~/Views/Shared/_noticePartial.cshtml", Model.Events);
            }
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Subscribe Start -->
@{
    Html.RenderPartial("~/Views/Shared/_subscribePartial.cshtml", new EduHomeAspProject.ViewModels.VMSubscribe {Page="About"});
}

<!-- Subscribe End -->

@model EduHomeAspProject.Models.TeacherSkill

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <form method="post">
        <div class="form-horizontal">
            <h4>Teacher Skill Update</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <label>Teacher</label>
                    <select class="form-control" name="TeacherId">
                        <option value="value">Choose</option>
                        @foreach (var item in ViewBag.Teachers)
                        {
                            <option value="@item.Id" @(Model.TeacherId == item.Id ? "selected" : "")>@item.Fullname</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Skill</label>
                    <select class="form-control" name="SkillId">
                        <option value="value">Choose</option>
                        @foreach (var item in ViewBag.Skills)
                        {
                            <option value="@item.Id" @(Model.SkillId == item.Id ? "selected" : "")>@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

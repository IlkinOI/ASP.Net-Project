@model IEnumerable<EduHomeAspProject.Models.CourseCategory>

@{
    ViewBag.Title = "CourseCategoryIndex";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Course Category List</h2>

<p>
    @Html.ActionLink("Create New", "CourseCategoryCreate")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
        </td>
        <td>
            @Html.ActionLink("Edit", "CourseCategoryUpdate", new { id=item.Id }) |
            <a href="@Url.Action("CourseCategorDelete","Course", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
    </tr>
}

</table>

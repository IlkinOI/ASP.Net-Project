@model IEnumerable<EduHomeAspProject.Models.BlogCategory>

@{
    ViewBag.Title = "BlogCategoryIndex";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Blog Category List</h2>
<p>
    @Html.ActionLink("Create New", "BlogCategoryCreate")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
            </td>
            <td>
                @Html.ActionLink("Edit", "BlogCategoryUpdate", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "BlogCategoryDetails", new { id=item.Id }) |*@
                <a href="@Url.Action("BlogCategoryDelete","Blog", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
            </td>
        </tr>
    }

</table>

@model EduHomeAspProject.Models.EventSpeaker

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<form method="post">

    <div class="form-horizontal">
        <h4>Events Speakers Create</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label>Choose Event</label>
                <select class="form-control" name="EventId">
                    <option value="value">Choose</option>
                    @foreach (var item in ViewBag.Events)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Shoose Speaker</label>
                <select class="form-control" name="SpeakerId">
                    <option value="value">Choose</option>
                    @foreach (var item in ViewBag.Speakers)
                    {
                        <option value="@item.Id">@item.Fullname</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

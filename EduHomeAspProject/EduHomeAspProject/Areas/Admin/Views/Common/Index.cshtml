@model IEnumerable<EduHomeAspProject.Models.Common>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Common list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogoFooter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogoHeader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookLogoWhite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookLogoRed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Site)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageVBG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slogan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <img src="~/Uploads/@item.LogoFooter" alt="@item.LogoFooter" width="100" />
         </td>
        <td>
            <img src="~/Uploads/@item.LogoHeader" alt="@item.LogoHeader" width="100" />
         </td>
        <td>
            <img src="~/Uploads/@item.BookLogoWhite" alt="@item.BookLogoWhite" width="100" />
         </td>
        <td>
            <img src="~/Uploads/@item.BookLogoRed" alt="@item.BookLogoRed" width="100" />
         </td>
        <td>
            @Html.DisplayFor(modelItem => item.Site)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Video)
        </td>
        <td>
            <img src="~/Uploads/@item.ImageVBG" alt="@item.ImageVBG" width="100" />
         </td>
        <td>
            <img src="~/Uploads/@item.Image" alt="@item.Image" width="100" />
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slogan)
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id=item.Id }) |
            <a href="@Url.Action("Delete","Common", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>        </td>
    </tr>
}

</table>
